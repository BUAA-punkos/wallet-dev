    "version": "0.2.0",
    "configurations": [
        {
            "name": "ClientDebugger",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true
        },
        {
            "name": "RelayDebugger",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/relay",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true
        },
    ]
}